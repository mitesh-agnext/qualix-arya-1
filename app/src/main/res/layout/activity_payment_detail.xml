<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/custom_toolbar" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:id="@+id/cdItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total of payments"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvTittle1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="@string/payment"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey" />

                <TextView
                    android:id="@+id/tvValue1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="60"
                    android:gravity="left"
                    android:text="500"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="?colorPrimary"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/tvTittle2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="Client"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey" />

                <TextView
                    android:id="@+id/tvValue2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="60"
                    android:gravity="left"
                    android:text="Agnext Tech"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/tvTittle3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="@string/commodity"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey" />

                <TextView
                    android:id="@+id/tvValue3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="60"
                    android:gravity="left"
                    android:text="Rice"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/tvTittle4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="Quality"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey" />

                <TextView
                    android:id="@+id/tvValue4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="60"
                    android:gravity="left"
                    android:text="12"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/tvTittle5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="Date"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey" />

                <TextView
                    android:id="@+id/tvValue5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="60"
                    android:gravity="left"
                    android:text="12/02/2020"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail of payments"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvTittleBatch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="Batch Id"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey" />

                <TextView
                    android:id="@+id/tvBatchId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="60"
                    android:gravity="left"
                    android:text="EV12042020"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="Date"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="60"
                    android:gravity="left"
                    android:text="12/04/2020"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="Weight"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey" />

                <TextView
                    android:id="@+id/tvWeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="60"
                    android:gravity="left"
                    android:text="10 kg"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="Quality"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey" />

                <TextView
                    android:id="@+id/tvQuality"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="60"
                    android:gravity="left"
                    android:text="45"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="Amount"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey" />

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="60"
                    android:gravity="left"
                    android:text="₹450"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="?colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?colorPrimary"
                android:layout_marginTop="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="Batch Id"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="60"
                    android:gravity="left"
                    android:text="EV12042020"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="Date"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="60"
                    android:gravity="left"
                    android:text="14/04/2020"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="Weight"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="60"
                    android:gravity="left"
                    android:text="10 kg"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="Quality"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="60"
                    android:gravity="left"
                    android:text="45"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="Amount"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/average_grey" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="60"
                    android:gravity="left"
                    android:text="₹550"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="?colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>